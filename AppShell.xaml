<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Group17DriveTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Group17DriveTracker"
    Shell.FlyoutBehavior="Disabled"
    Title="Group17DriveTracker">
    <!-- Create Account Page Route -->
    <ShellContent
    Title="Create Account"
    ContentTemplate="{DataTemplate local:AccountPage}"
    Route="CreateAccountPage" />
    <!-- Main Page Route -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
</Shell>
